    {
        Node node = new Node()
        {
            OffsetX = 250,
            OffsetY = 250,
            Width = 100,
            Height = 100
        };
        _nodes.Add(node);
    }

    // Notify the keydown event
    private void OnKeyDown(KeyEventArgs args)
    {

    }
}