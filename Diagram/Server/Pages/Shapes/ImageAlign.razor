@page "/ImageAlign"

@using Syncfusion.Blazor.Diagram

@* Initialize Diagram *@
<SfDiagramComponent Height="600px" Nodes="@_nodes" />

@code
{
    //Reference the diagram
    private SfDiagramComponent _diagram;
    //Intialize diagram's nodes collection
    private DiagramObjectCollection<Node> _nodes = new DiagramObjectCollection<Node>();

    protected override void OnInitialized()
    {
        Node node = new Node()
        {
            ID = "node1",
            //Size of the node
            Height = 100,
            Width = 100,
            //Position of the node
            OffsetX = 100,
            OffsetY = 100,
            Shape = new ImageShape()
            {
                Type = NodeShapes.Image,
                Source = "https://cdn.syncfusion.com/content/images/company-logos/Syncfusion_Logo_Image.png",
                Scale = DiagramScale.Meet,
                ImageAlign = ImageAlignment.XMinYMax
            }
        };
        _nodes.Add(node);
    }
}